{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}

<div class="poppins">
  <div>
    <h1 class="violet">Historique des logs :</h1>
        <div class="container-log">
            {% for log in logDeserialized %}
                <code>
                    <p>
                        $>
                        <span class="violet">[{{ log['timestamp'] }}]</span>
                        <span class="red">[{{log['level']}}]</span>
                        <span class="green">[{{log['client_ip']}}]</span> >
                        <span class="orange">{{log['message']}}</span>
                    </p>
                </code>
            {% endfor %}
        </div>
  </div>
  <div>
    <h1 class="violet">Blog :</h1>
        <div class="row">
            {% for post in blogs %}
                <div class="column-33 border-4">
                    <h1>
                        <a class="white" href="/blog/{{ post.id }}" >
                            {{ post.title }}
                        </a>
                    </h1>

                    <img width="100%" src={{ post.img }} />

                    <p>
                        {{ post.content }}
                    </p>
                    <hr>
                </div>
            {% endfor %}
        </div>
  </div>
</div>

    

{% endblock %}
